<div id="items" class="tab character-bio" data-group="sheet" data-tab="items">
  <!-- Notes / Histoire -->
  <div class="part histoire fond">
    <label></label>
    {{formInput
      systemFields.biography
      name="system.biography"
      value=system.biography
    }}
  </div>

  <!-- Inventaire -->
  <div class="part inven fond">
    <label>{{localize 'Pony.Character.Biography.Inventaire'}} <span class="salaire" title="argent">{{formInput systemFields.argent name="system.argent" value=system.level localize=true}}</span><button type="button" class="add-item add-button" data-action="addItem">‚ûï</button></label>
    <ul class="list">
      {{#each items as |item index|}}
        {{#if (eq item.type "item")}}
          <li class="draggable" data-item-id="{{item._id}}" title="{{stripTags item.system.description}}"><img class="item-img" src="{{item.img}} ">
            <span class="name">{{item.name}}</span>
            <span class="descr">{{stripTags item.system.description}}</span>
            <span class="modif"><button type="button" class="item-action" data-action="edit" title="{{localize 'Pony.Character.Biography.Modifier'}}" data-item-id="{{item._id}}">‚úèÔ∏è</button>
                  <button type="button" class="item-action" data-action="use" title="{{localize 'Pony.Character.Biography.Utiliser'}}" data-item-id="{{item._id}}">üé≤</button>
                  <button type="button" class="item-action" data-action="delete" title="{{localize 'Pony.Character.Biography.Supprimer'}}" data-item-id="{{item._id}}">‚ùå</button>
            </span></li>
         {{/if}}
      {{/each}}
    </ul>
  </div>
</div>
