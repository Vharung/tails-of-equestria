<div class="items">
  <div class="part item-header flexrow">
    <div class="portrait">
      <img src="{{item.img}}" data-edit="img" title="{{item.name}}"  data-action="editImage"/>
    </div>
    <div class="identity flexcol">
      <h1>
        {{formInput fields.name value=source.name localize=true}}
      </h1>
      <div class="grid grid-2col">
        <label>Type :</label>
        <span>{{formInput systemFields.type name="system.type" value=system.type localize=true type="select"}}</span>

        <label>Quantit√© :</label>
        {{formInput systemFields.quantity name="system.quantity" value=system.quantity localize=true}}</h1>       
      </div>
    </div>
  </div>

  <!-- DESCRIPTION -->
  <div class="part">
    <h2>Description :</h2>
      {{formInput
        systemFields.description
        value=system.description
        name="system.description"
      }}
  </div>
</div>

